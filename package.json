    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.4.5",
    "vitest": "^2.1.2"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
